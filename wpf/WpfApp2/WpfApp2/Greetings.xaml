<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,91,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" RenderTransformOrigin="0.539,-0.975"/>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Height="19" Margin="224,198,0,0" VerticalAlignment="Top" Width="91" IsChecked="True"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Height="19" Margin="485,198,0,0" VerticalAlignment="Top" Width="91" IsChecked="True"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.084,-0.264" Height="32" Width="80" Click="Button_Click"/>
    </Grid>
</Window>
